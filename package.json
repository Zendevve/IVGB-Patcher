{
  "name": "pe-editor",
  "version": "1.0.0",
  "description": "Advanced PE Executable Editor â€” LAA/ASLR/DEP/CFG patcher with hex diff",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac"
  },
  "author": "PE Editor",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/pe-editor.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/pe-editor/issues"
  },
  "homepage": "https://github.com/yourusername/pe-editor#readme",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-log": "^5.0.1"
  },
  "build": {
    "appId": "com.peeditor.app",
    "productName": "PE Editor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "pe-parser.js",
      "pe-patcher.js",
      "batch-processor.js",
      "renderer/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
